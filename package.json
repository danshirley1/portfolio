{
  "name": "portfolio",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "install-deps": "yarn install && cd client && yarn install && cd ../server && yarn install && cd ..",
    "start": "concurrently \"cd server && npm start\" \"cd client && npm start\"",
    "lint": "eslint .",
    "test:client": "cd client && npm test",
    "test:client:coverage": "cd client && npm run coverage",
    "test:server": "cd server && npm test",
    "test:server:watch": "cd server && npm run test:watch",
    "test:server:coverage": "cd server && npm run coverage"
  },
  "devDependencies": {
    "babel-plugin-module-resolver": "^3.1.1",
    "concurrently": "3.1.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^16",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^23.5.0"
  }
}
